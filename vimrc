set nocompatible              " be iMproved, required
filetype off                  " required

set t_Co=256
set background=dark
syntax on
set hlsearch
set number
hi clear

hi Normal ctermbg=none
hi Comment ctermfg=lightgrey
hi Statement ctermfg=red
hi Constant ctermfg=green
set tabstop=4
set shiftwidth=4
set expandtab
set smarttab

set showmode

